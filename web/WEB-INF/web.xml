<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>contactbook.index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddContact</servlet-name>
        <servlet-class>contactbook.AddContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewContact</servlet-name>
        <servlet-class>contactbook.ViewContact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>savetofile</servlet-name>
        <servlet-class>contactbook.savetofile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddContact</servlet-name>
        <url-pattern>/AddContact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewContact</servlet-name>
        <url-pattern>/ViewContact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>savetofile</servlet-name>
        <url-pattern>/savetofile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
